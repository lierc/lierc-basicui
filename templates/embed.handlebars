<div class="embed-wrap-wrap">
  <div class="embed-wrap" data-embed-provider="{{provider_name_lc}}" data-embed-id="{{id}}">

{{#if image}}
    <div class="embed-thumb" style="background-image:url(//noembed.com/i/0/450/{{image}})">
{{#if is_video}}
      <div class="embed-play"></div>
{{/if}}
    </div>
{{else if thumbnail_url}}
    <div class="embed-thumb" style="background-image:url(//noembed.com/i/0/450/{{thumbnail_url}})">
{{#if is_video}}
      <div class="embed-play"></div>
{{/if}}
    </div>
{{/if}}


    <h2>{{title}}</h2>

{{#if use_html}}
{{html}}
{{else if description}}
<p class="description">{{description}}</p>
{{/if}}

    <p class="embed-source">{{provider_name}}</p>

  </div>
</div>
